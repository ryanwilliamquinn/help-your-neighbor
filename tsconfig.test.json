{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "@testing-library/jest-dom", "@types/jest", "node"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/test/**/*",
    "src/types/**/*",
    "src/test/types/**/*"
  ]
}
